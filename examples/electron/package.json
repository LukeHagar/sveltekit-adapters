		"@typescript-eslint/parser": "^8.35.1",
		"adapter-electron": "workspace:*",
		"concurrently": "^9.2.0",
		"cross-env": "^7.0.3",
		"dotenv": "^17.0.1",
		"electron": "^37.2.0",
